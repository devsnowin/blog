---
import { ActiveTab } from '@types';
import SocialStack from '@components/SocialStack.astro';
import Base from '@layouts/Base.astro';
---

<Base title="Home" tabName={ActiveTab.home}>
  <main class="mt-2 flex flex-col gap-5 md:gap-10">
    <div class="space-y-2 md:space-y-4">
      <h1 class="text-2xl md:text-4xl font-bold font-poppins">Snowin</h1>
      <p class="font-light">
        Hello, I'm Snowin, a <strong>Full Stack Developer</strong> specializing in
        accelerating the growth of startups and businesses. You explore my projects
        at
        <a href="https://devsnow.in" target="_blank">
          <em><u>devsnow.in</u></em>.
        </a>
      </p>
    </div>
    <div class="flex flex-wrap items-center gap-2">
      <SocialStack
        name="Twitter"
        icon="fe:twitter"
        to="https://zipy.live/snowin/twitter"
      />
      <SocialStack
        name="Github"
        icon="fe:github"
        to="https://zipy.live/snowin/github"
      />
      <SocialStack
        name="Website"
        icon="fe:insert-link"
        to="https://zipy.live/snowin/website"
      />
    </div>
  </main>
</Base>
