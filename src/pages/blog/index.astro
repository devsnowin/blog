---
import { type PostFrontmatter, ActiveTab } from '@types';
import Base from '@layouts/Base.astro';
import Posts from '@components/Posts.astro';

const posts = await Astro.glob<PostFrontmatter>('./*.md');
---

<Base title="Blog" tabName={ActiveTab.blog}>
  <main class="mt-2 flex flex-col gap-5 md:gap-10">
    <h1 class="text-2xl md:text-4xl font-bold font-poppins">Blog Posts</h1>
    <Posts posts={posts} />
  </main>
</Base>
