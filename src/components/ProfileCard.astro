---
import { Icon } from 'astro-icon';
---

<div class="flex items-center md:items-start gap-4 md:gap-8 mt-2">
  <img
    src="/images/me.png"
    width={100}
    height={100}
    class="w-16 md:w-24 rounded-full"
    alt="my memoji"
  />
  <div class="flex flex-col items-start md:gap-4">
    <div class="font-poppins">
      <h1 class="font-bold text-xl md:text-2xl">Snowin</h1>
      <p>Full Stack Developer</p>
    </div>
    <div
      class="absolute -bottom-12 left-0 flex items-center gap-4 md:relative md:bottom-0 md:gap-8"
    >
      <a
        href="https://zipy.live/snowin/twitter"
        target="_blank"
        class="font-light text-border flex items-center gap-2"
      >
        follow me on twitter
        <span>
          <Icon name="tabler:arrow-up-right" class="w-5" />
        </span>
      </a>
      <a
        href="https://zipy.live/snowin/github"
        target="_blank"
        class="font-light text-border flex items-center gap-2"
      >
        check out my github
        <span>
          <Icon name="tabler:arrow-up-right" class="w-5" />
        </span>
      </a>
    </div>
  </div>
</div>
